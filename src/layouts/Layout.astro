---
import '../styles/global.css'

const {
  title = "Your Name – Portfolio",
  description = "Software engineer portfolio and projects.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Basic social preview -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Fonts (optional; swap for no FOIT) -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Example: Inter via system UI fallback -->
    <style>
      :root { --pad: clamp(1rem, 2vw, 2rem); }
      html { color-scheme: light dark }
      body { margin: 0; font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Inter, sans-serif; }
    </style>
  </head>
  <body class="min-h-screen">
    <header class="px-(--pad) py-4">
      <nav class="max-w-5xl mx-auto flex items-center justify-between">
        <a href="/" class="font-semibold">YourName</a>
        <div class="flex gap-6 text-sm opacity-80">
          <a href="/projects/">Projects</a>
          <a href="/about/">About</a>
        </div>
      </nav>
    </header>

    <main class="px-(--pad)">
      <div class="max-w-5xl mx-auto">
        <slot />
      </div>
    </main>

    <footer class="px-(--pad) py-10 opacity-70 text-sm">
      <div class="max-w-5xl mx-auto">© {new Date().getFullYear()} Your Name</div>
    </footer>
  </body>
</html>
